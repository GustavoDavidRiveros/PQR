<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="#000000">

    <ImageButton
        android:id="@+id/boton"
        android:layout_width="300dp"
        android:layout_height="290dp"
        android:layout_marginTop="78dp"
        android:background="@android:color/holo_blue_dark"
        app:srcCompat="@drawable/boton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" android:contentDescription="@string/todo" />

    <Button
        android:id="@+id/btnMenu"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Configuracion"
        android:textColor="@android:color/holo_green_dark" />

    <Button
        android:id="@+id/btnIntermitencia"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Encender Intermitencia"
        android:textColor="@android:color/holo_green_dark" />
</RelativeLayout>