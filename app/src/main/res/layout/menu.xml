<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark">

    <TextView
        android:id="@+id/tbSonido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnvolver"
        android:layout_marginTop="19dp"
        android:text="Intermitencia"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Widget.PopupMenu.Small"
        android:textColor="@android:color/holo_green_dark"
        android:textColorLink="@android:color/holo_green_dark"
        android:textSize="40sp"
        android:visibility="visible"
        tools:text="Intermitencia" />

    <TextView
        android:id="@+id/tbRepeticiones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tbSonido"
        android:layout_marginTop="19dp"
        android:text="Repeticiones"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Widget.PopupMenu.Small"
        android:textColor="@android:color/holo_green_dark"
        android:textColorLink="@android:color/holo_green_dark"
        android:textSize="20sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tbIntencidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sbRepeticiones"
        android:layout_marginTop="19dp"
        android:text="Intencidad"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Widget.PopupMenu.Small"
        android:textColor="@android:color/holo_green_dark"
        android:textColorLink="@android:color/holo_green_dark"
        android:textSize="20sp"
        android:visibility="visible"
        tools:text="Intencidad" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:width="150dp"
        android:height="60dp"
        android:text="Guardar"
        android:textColor="@android:color/holo_green_dark"
        android:textColorLink="@android:color/background_light" />

    <Button
        android:id="@+id/btnvolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="false"
        android:background="?android:attr/colorForeground"
        android:text="Volver"
        android:textColor="@android:color/holo_green_dark"
        android:textColorLink="@android:color/holo_green_dark" />

    <SeekBar
        android:id="@+id/sbIntencidad"
        style="@android:style/Widget.DeviceDefault.Light.SeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tbIntencidad"
        android:layout_marginTop="72dp"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:max="100"
        android:progress="1"
        android:theme="@android:style/Widget.SeekBar" />

    <SeekBar
        android:id="@+id/sbRepeticiones"
        style="@android:style/Widget.DeviceDefault.Light.SeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tbRepeticiones"
        android:layout_marginTop="72dp"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:backgroundTint="@android:color/holo_green_dark"
        android:max="100"
        android:progress="1"
        android:progressBackgroundTint="@android:color/holo_green_light"
        android:theme="@android:style/Widget.SeekBar" />

</RelativeLayout>